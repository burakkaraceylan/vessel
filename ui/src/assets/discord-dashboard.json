{
	"id": "discord-dashboard",
	"name": "Discord Dashboard",
	"rows": 4,
	"columns": 8,
	"widgets": [
		{
			"id": "widget1",
			"type": "button",
			"size": { "w": 1, "h": 1 },
			"position": { "col": 0, "row": 0 },
			"config": {
				"icon": "square",
				"image": "${if discord.voice_settings_update.mute then \"/packs/hexaza/016-DISCORD_mute-1.jpg\" else \"/packs/hexaza/016-DISCORD_mute-0.jpg\"}",
				"backgroundColor": "black",
				"borderColor": "${if discord.speaking.active then \"#43b581\" else \"var(--border-color)\"}",
				"action": {
					"module": "discord",
					"action": "set_mute",
					"params": {
						"mute": "$toggle"
					}
				},
				"valueBinding": {
					"module": "discord",
					"event": "voice_settings_update",
					"key": "mute"
				}
			}
		},
		{
			"id": "widget-media-cover",
			"type": "image",
			"size": { "w": 3, "h": 3 },
			"position": { "col": 5, "row": 1 },
			"config": {
				"image": "${media.track_changed.cover_art_url != undefined ? media.track_changed.cover_art_url : \"https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExNWVnbTI5M3NweGw3bGhwaWxjc3EzbHpuZTBpNWpuNzhibW90NXI3eCZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/Ll1rEkDebTIdO/giphy.gif\"}",
				"label": "${media.track_changed.title != undefined ? media.track_changed.title : \"\"}",
				"labelPosition": "b",
				"backgroundColor": "black",
				"borderColor": "var(--border-color)"
			}
		},
		{
			"id": "media-previous",
			"type": "button",
			"size": { "w": 1, "h": 1 },
			"position": { "col": 5, "row": 0 },
			"config": {
				"backgroundColor": "black",
				"image": "/packs/hexaza/005-MULTIMEDIA_0_prev-track.jpg",
				"borderColor": "var(--border-color)",
				"action": {
					"module": "media",
					"action": "previous"
				}
			}
		},
		{
			"id": "media-play-pause",
			"type": "button",
			"size": { "w": 1, "h": 1 },
			"position": { "col": 6, "row": 0 },
			"config": {
				"backgroundColor": "black",
				"image": "/packs/hexaza/005-MULTIMEDIA_0_play-pause.jpg",
				"borderColor": "var(--border-color)",
				"action": {
					"module": "media",
					"action": "toggle_play_pause"
				}
			}
		},
		{
			"id": "media-next",
			"type": "button",
			"size": { "w": 1, "h": 1 },
			"position": { "col": 7, "row": 0 },
			"config": {
				"backgroundColor": "black",
				"image": "/packs/hexaza/005-MULTIMEDIA_0_next-track.jpg",
				"borderColor": "var(--border-color)",
				"action": {
					"module": "media",
					"action": "next"
				}
			}
		},
		{
			"id": "sf6",
			"type": "button",
			"size": { "w": 1, "h": 1 },
			"position": { "col": 0, "row": 3 },
			"config": {
				"backgroundColor": "black",
				"image": "/packs/hexaza/031-GAMES_street-fighter-6.jpg",
				"borderColor": "var(--border-color)",
				"action": {
					"module": "system",
					"action": "open_uri",
					"params": { "uri": "steam://rungameid/1364780" }
				}
			}
		},
		{
			"id": "apple-music",
			"type": "button",
			"size": { "w": 1, "h": 1 },
			"position": { "col": 1, "row": 3 },
			"config": {
				"backgroundColor": "black",
				"image": "/packs/hexaza/006-ELGATO-WAVE_music.jpg",
				"borderColor": "var(--border-color)",
				"action": {
					"module": "system",
					"action": "spawn_exe",
					"params": {
						"exe": "C:\\Users\\Burak\\AppData\\Local\\Microsoft\\WindowsApps\\AppleMusic.exe"
					}
				}
			}
		}
	],
	"zones": [
		{
			"position": { "col": 0, "row": 1 },
			"size": { "w": 5, "h": 1 },
			"profiles": [
				{
					"name": "In a call",
					"condition": "${system.window_focus_changed.exe == \"Code.exe\"}",
					"default": false,
					"widgets": [
						{
							"id": "vscode-vim-mode",
							"type": "button",
							"size": { "w": 1, "h": 1 },
							"position": { "col": 0, "row": 0 },
							"config": {
								"backgroundColor": "black",
								"image": "/packs/hexaza/000-BLANK_background-1.jpg",
								"borderColor": "var(--border-color)",
								"label": "Vim Mode",
								"action": {
									"module": "system",
									"action": "send_keys",
									"params": {
										"keys": "ctrl+shift+alt+v"
									}
								}
							}
						},
						{
							"id": "vscode-format",
							"type": "button",
							"size": { "w": 1, "h": 1 },
							"position": { "col": 1, "row": 0 },
							"config": {
								"backgroundColor": "black",
								"image": "/packs/hexaza/000-BLANK_background-1.jpg",
								"borderColor": "var(--border-color)",
								"label": "Format",
								"action": {
									"module": "system",
									"action": "send_keys",
									"params": {
										"keys": "shift+alt+f"
									}
								}
							}
						},
						{
							"id": "vscode-terminal",
							"type": "button",
							"size": { "w": 1, "h": 1 },
							"position": { "col": 2, "row": 0 },
							"config": {
								"backgroundColor": "black",
								"image": "/packs/hexaza/000-BLANK_background-1.jpg",
								"borderColor": "var(--border-color)",
								"label": "Terminal",
								"action": {
									"module": "system",
									"action": "send_keys",
									"params": {
										"keys": "ctrl+`"
									}
								}
							}
						},
						{
							"id": "vscode-run",
							"type": "button",
							"size": { "w": 1, "h": 1 },
							"position": { "col": 3, "row": 0 },
							"config": {
								"backgroundColor": "black",
								"image": "/packs/hexaza/000-BLANK_background-1.jpg",
								"borderColor": "var(--border-color)",
								"label": "Run",
								"action": {
									"module": "system",
									"action": "send_keys",
									"params": {
										"keys": "f5"
									}
								}
							}
						},
						{
							"id": "vscode-stop",
							"type": "button",
							"size": { "w": 1, "h": 1 },
							"position": { "col": 4, "row": 0 },
							"config": {
								"backgroundColor": "black",
								"image": "/packs/hexaza/000-BLANK_background-1.jpg",
								"borderColor": "var(--border-color)",
								"label": "Stop",
								"action": {
									"module": "system",
									"action": "send_keys",
									"params": {
										"keys": "shift+f5"
									}
								}
							}
						}
					]
				},
				{
					"name": "Default",
					"condition": "true",
					"default": true
				}
			]
		}
	]
}
